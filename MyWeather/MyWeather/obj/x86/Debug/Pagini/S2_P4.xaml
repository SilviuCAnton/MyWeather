<Page
    x:Class="MyWeather.Pagini.S2_P4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyWeather.Pagini"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="O problema si solutia ei"
                   Grid.Column="1"
                   Foreground="#B3B3B3"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

        <TextBlock Grid.Column="1"
                   Text="Acum, alege ce poti face ca sa remediezi disconfortul pe care nu l-ai putut preveni:"
                   Grid.Row="1"
                   Foreground="#75245E"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Column="1"
                    Grid.Row="2"
                    Orientation="Vertical"
                    VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">

                <CheckBox x:ConnectionId='7' Name="Checkbox1"
                         IsChecked="False"
                         Margin="0,0,0,4">

                    <TextBlock Foreground="#75245E"
                           VerticalAlignment="Center">
                    Fac rost de creme antiinflamatoare cu extracte din plante,<LineBreak/>
                    pe care sa le aplic pe zonele unde simt durere.
                    </TextBlock>

                </CheckBox>

                <Image x:ConnectionId='8' Name="ImagineFeedback1"
                       Margin="18,0,0,0"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Center"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <CheckBox x:ConnectionId='5' Name="Checkbox2"
                         IsChecked="False"
                         Margin="0,0,0,4">

                    <TextBlock Foreground="#75245E"
                           VerticalAlignment="Center">
                    Evit sa consum cafea, alcool sau ceaiuri energizante si orice<LineBreak/>
                    alta substanta care excita creierul, accentuand simptomele<LineBreak/>
                    de meteosensibilitate.
                    </TextBlock>

                </CheckBox>

                <Image x:ConnectionId='6' Name="ImagineFeedback2"
                       Margin="7,0,0,0"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Center"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <CheckBox x:ConnectionId='3' Name="Checkbox3"
                         IsChecked="False"
                         Margin="0,0,0,4">

                    <TextBlock Foreground="#75245E"
                           VerticalAlignment="Center">
                    Incerc sa ma cunosc mai bine si sa am grija de mine mai<LineBreak/>
                    mult decat pana acum.
                    </TextBlock>

                </CheckBox>
                
                <Image x:ConnectionId='4' Name="ImagineFeedback3"
                       Margin="25,0,0,0"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Center"/>
                
            </StackPanel>

        </StackPanel>

        <Button x:ConnectionId='1' Name="ButonTrimiteAlegeri"
                Height="50"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Trimite alegerile"
                FontWeight="Bold"
                FontSize="16"
                Background="Transparent"
                BorderBrush="Black"
                Grid.Row="3"
                Grid.Column="1"
                                                 />

        <TextBlock x:ConnectionId='2' Name="TextBlockRezultat"
                   Foreground="#14c515"
                   FontSize="16"
                   Grid.Row="4"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>
</Page>


<Page
    x:Class="MyWeather.S1_P4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="2.3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Hai sa aflam ce e cu vremea"
                   Grid.ColumnSpan="7"
                   Grid.Column="1"
                   Foreground="#B3B3B3"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"/>

        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="7"
                   Grid.Row="1"
                   Foreground="#75245E"
                   FontSize="16"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   TextAlignment="Center">
            Mai mult! Descopera in imagine analogiile care descriu: <LineBreak/>
            vremea optima, vremea excitanta si vremea acuta.
        </TextBlock>

        <Image Source="../Assets/Imagini/actiune_vreme.jpg"
               Grid.Row="2"
               Grid.ColumnSpan="8"
               Grid.RowSpan="8"
               Stretch="Fill"/>

        <Border Background="Black" Grid.ColumnSpan="8" Grid.Row="9" Opacity="0.5"/>
        
        <TextBlock x:ConnectionId='1' Name="TexblockDescriere"
                   Foreground="White"
                   Grid.ColumnSpan="8" 
                   Grid.Row="9"
                   Margin="2,0,0,0"
                   FontSize="16"
                   TextAlignment="Left"/>
        
        <TextBlock x:ConnectionId='2' Name="BulinaText1"
                   HorizontalAlignment="Left"
                   Grid.Row="7"
                   Grid.Column="4"
                   Text="&#xE91F;"
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"
                   FontFamily="Segoe MDL2 Assets"
                   Foreground="WhiteSmoke"
                   FontSize="10"
                                                              />

        <TextBlock x:ConnectionId='3' Name="BulinaText2"
                   HorizontalAlignment="Left"
                   Grid.Row="5"
                   Grid.Column="2"
                   Text="&#xE91F;"
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"
                   FontFamily="Segoe MDL2 Assets"
                   Foreground="WhiteSmoke"
                   FontSize="10"
                                                              />

        <TextBlock x:ConnectionId='4' Name="BulinaText3"
                   HorizontalAlignment="Left"
                   Grid.Row="3"
                   Grid.Column="6"
                   Text="&#xE91F;"
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"
                   FontFamily="Segoe MDL2 Assets"
                   Foreground="WhiteSmoke"
                   FontSize="10"
                                                              />

        <Image Source="../Assets/Imagini/click_aici2.png"
               Grid.Row="4"
               Grid.Column="1"
               Height="40"
               Width="120"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"/>

        <Image Source="../Assets/Imagini/click_aici2.png"
               Grid.Row="6"
               Grid.Column="3"
               Height="40"
               Width="120"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"/>

        <Image Source="../Assets/Imagini/click_aici2.png"
               Grid.Row="2"
               Grid.Column="5"
               Height="40"
               Width="120"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"/>

    </Grid>
</Page>

